<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
<display-name>PahanaOnline Bookshop</display-name>
<welcome-file-list>
<welcome-file>view/login.jsp</welcome-file>
</welcome-file-list>
<!--  CustomerRegistrationController  -->
<servlet>
<servlet-name>CustomerRegistrationController</servlet-name>
<servlet-class>com.bookshop.controller.CustomerRegistrationController</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>CustomerRegistrationController</servlet-name>
<url-pattern>/customer-register</url-pattern>
</servlet-mapping>
<!--  Other controllers  -->
<servlet>
<servlet-name>ItemController</servlet-name>
<servlet-class>com.bookshop.controller.ItemController</servlet-class>
</servlet>
<servlet>
<description> </description>
<display-name>CartController</display-name>
<servlet-name>CartController</servlet-name>
<servlet-class>com.bookshop.controller.CartController</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>ItemController</servlet-name>
<url-pattern>/item</url-pattern>
</servlet-mapping>
 
</web-app>